# vim: syntax=conf

# Entries navigation
bind index,pager k previous-entry
bind index,pager j next-entry
bind index,pager \cu half-up
bind index,pager \cd half-down
bind index,pager e next-line
bind index,pager y previous-line
bind index,pager g noop
bind pager gg top
bind index gg first-entry
bind pager G bottom
bind index G last-entry
bind index o display-message

# Sidebar navigation
bind index,pager \cj sidebar-next
bind index,pager \ck sidebar-prev
bind index,pager \cl sidebar-open

# Sync all emails
macro index,pager \cr \
  "<shell-escape>mbsync -a -c ~/.config/neomutt/mbsyncrc<enter>" \
  "sync all emails"

# Move entry to a folder
macro index,pager \cm \
  ":source ~/.config/neomutt/scripts/fzf-save-message|<enter>" \
  "move entry to a folder"

# Open a folder
macro index,pager \cp \
  ":source ~/.config/neomutt/scripts/fzf-change-folder|<enter>" \
  "open a folder"

# Mark all entries as read
macro index AN \
  "<tag-pattern>~N<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" \
  "mark all new emails as read"

# Shortcuts
bind index,pager @ compose-to-sender
bind index,pager R group-reply
bind index <tab> sync-mailbox
bind index <space> collapse-thread

# Save all attachments
# macro index,pager S "<pipe-message>ripmime -i - -d ~/Downloads && rm ~/Downloads/textfile*" "Save all non-text attachments using ripmime"

# Opening urls with urlscan
# macro index,pager \cb "<pipe-message>urlscan<enter>" "call urlscan to extract URLs out of a message"

# View attachments properly.
bind attach o view-mailcap

# Drafts
bind compose P postpone-message
bind index p recall-message

# finding stuff
bind editor <tab> complete-query
# macro index F "<shell-escape>mu find --clearlinks --format=links --linksdir=~/.mu/results " "mu find"
# macro index \cf "<change-folder-readonly>~/.mu/results<enter>" "mu find results"
